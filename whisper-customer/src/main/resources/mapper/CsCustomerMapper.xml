        <result property="reserved3"        column="reserved3"          />
        <result property="extField1"        column="ext_field1"         />
        <result property="extField2"        column="ext_field2"         />
    </resultMap>

    <sql id="selectCsCustomerVo">
        select customer_id, customer_no, customer_name, customer_type, phone, email, wechat, qq, company, industry, region, address, birthday, gender, avatar, level, source, tags, last_contact_time, status, del_flag, create_by, create_time, update_by, update_time, remark, reserved1, reserved2, reserved3, ext_field1, ext_field2 from cs_customer
    </sql>

    <select id="selectCsCustomerList" parameterType="CsCustomer" resultMap="CsCustomerResult">
        <include refid="selectCsCustomerVo"/>
        <where>  
            <if test="customerNo != null  and customerNo != ''"> and customer_no = #{customerNo}</if>
            <if test="customerName != null  and customerName != ''"> and customer_name like concat('%', #{customerName}, '%')</if>
            <if test="customerType != null  and customerType != ''"> and customer_type = #{customerType}</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
            <if test="email != null  and email != ''"> and email = #{email}</if>
            <if test="company != null  and company != ''"> and company like concat('%', #{company}, '%')</if>
            <if test="industry != null  and industry != ''"> and industry = #{industry}</if>
            <if test="region != null  and region != ''"> and region like concat('%', #{region}, '%')</if>
            <if test="gender != null  and gender != ''"> and gender = #{gender}</if>
            <if test="level != null  and level != ''"> and level = #{level}</if>
            <if test="source != null  and source != ''"> and source = #{source}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                and date_format(create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                and date_format(create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
            </if>
            and del_flag = '0'
        </where>
        order by create_time desc
    </select>
    
    <select id="selectCsCustomerByCustomerId" parameterType="Long" resultMap="CsCustomerResult">
        <include refid="selectCsCustomerVo"/>
        where customer_id = #{customerId} and del_flag = '0'
    </select>

    <select id="selectCsCustomerByCustomerNo" parameterType="String" resultMap="CsCustomerResult">
        <include refid="selectCsCustomerVo"/>
        where customer_no = #{customerNo} and del_flag = '0'
    </select>

    <select id="selectCsCustomerByPhone" parameterType="String" resultMap="CsCustomerResult">
        <include refid="selectCsCustomerVo"/>
        where phone = #{phone} and del_flag = '0'
    </select>

    <select id="selectCsCustomerByEmail" parameterType="String" resultMap="CsCustomerResult">
        <include refid="selectCsCustomerVo"/>
        where email = #{email} and del_flag = '0'
    </select>

    <select id="selectCsCustomerByLevel" parameterType="String" resultMap="CsCustomerResult">
        <include refid="selectCsCustomerVo"/>
        where level = #{level} and del_flag = '0'
        order by create_time desc
    </select>

    <select id="selectCsCustomerBySource" parameterType="String" resultMap="CsCustomerResult">
        <include refid="selectCsCustomerVo"/>
        where source = #{source} and del_flag = '0'
        order by create_time desc
    </select>

    <select id="checkCustomerNoUnique" parameterType="String" resultMap="CsCustomerResult">
        <include refid="selectCsCustomerVo"/>
        where customer_no = #{customerNo} and del_flag = '0' limit 1
    </select>

    <select id="checkPhoneUnique" parameterType="String" resultMap="CsCustomerResult">
        <include refid="selectCsCustomerVo"/>
        where phone = #{phone} and del_flag = '0' limit 1
    </select>

    <select id="checkEmailUnique" parameterType="String" resultMap="CsCustomerResult">
        <include refid="selectCsCustomerVo"/>
        where email = #{email} and del_flag = '0' limit 1
    </select>

    <select id="countCustomers" resultType="int">
        select count(*) from cs_customer where del_flag = '0'
    </select>

    <select id="countTodayNewCustomers" resultType="int">
        select count(*) from cs_customer 
        where del_flag = '0' 
        and date_format(create_time,'%Y-%m-%d') = date_format(now(),'%Y-%m-%d')
    </select>

